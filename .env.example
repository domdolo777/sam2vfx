# SAM2 Configuration
SAM2_PATH=/workspace/sam2
SAM2_MODEL=sam2.1_hiera_small  # Options: tiny, small, base_plus, large
CUDA_VISIBLE_DEVICES=0

# Server Configuration
PORT=5000
HOST=0.0.0.0
DEBUG=True

# Video Processing
MAX_VIDEO_SIZE=1024  # Maximum video resolution
MAX_UPLOAD_SIZE=500  # In MB
TEMP_DIR=/workspace/sam2vfx/temp
CACHE_DIR=/workspace/sam2vfx/cache
OUTPUT_DIR=/workspace/sam2vfx/output

# Effect System
FX_DIR=/workspace/sam2vfx/fx
DEFAULT_FEATHER_RADIUS=5
DEFAULT_EXPANSION=2

# Performance
BATCH_SIZE=4
NUM_WORKERS=4
USE_CUDA=True

# Development
FLASK_ENV=development
REACT_APP_API_URL=http://localhost:5000 